[
    {
        "bindings": {
            "cmd-shift-o": "file_finder::Toggle"
        }
    },
    {
        "context": "Editor && mode == full",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-alt-o": "outline::Toggle"
        }
    },
    {
        "context": "Editor && extension == md",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-p": "markdown::OpenPreview"
        }
    }
]
