{
    "ui_font_size": 19,
    "buffer_font_size": 22,
    "hard_tabs": false,
    "tab_size": 4,
    "show_whitespaces": "all",
    "soft_wrap": "preferred_line_length",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Catppuccin Macchiato"
    },
    "auto_install_extensions": {
        "catppuccin": true,
        "docker-compose": true,
        "dockerfile": true,
        "html": true,
        "toml": true,
        "xml": true
    },
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 2,
        "coloring": "indent_aware",
        "background_coloring": "disabled"
    },
    "languages": {
        "Python": {
            "preferred_line_length": 80
        },
        "XML": {
            "hard_tabs": true
        }
    }
}
